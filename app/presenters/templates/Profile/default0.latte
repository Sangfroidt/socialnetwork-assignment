<!DOCTYPE html>
{block content}
    <h1 n:block="title">MÅ¯j blog</h1>
		<a n:href="Post:create" n:if="$user->loggedIn">Create post</a>

    {foreach $posts as $post}
    <div class="post">
        <div class="date">{$post->created_at|date:'F j, Y'}</div>

        <h2>{$post->title}</h2>
				<h2><a href="{link Post:show $post->id}">{$post->id} {$post->title}</a></h2>

        <div>{$post->content}</div>
    </div>
    {/foreach}

    <div id="content">
	<div>
		{for $i = 1; $i <= $paginator->pageCount; $i++}
			{if $i == $paginator->page}
				<strong>{$i}</strong>
			{else}
				<a n:href="Homepage:default, $i">{$i}</a>
			{/if}
		{/for}
	</div>
</div>
{/block}
